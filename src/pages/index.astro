---
import type { NodeByUri } from '../types.ts';
import { getNodeByURI } from '../utils/gqlRoutes.ts';
import Layout from '../layouts/Layout.astro'
import RecentPosts from '../components/sections/RecentPosts.astro';

const data = await getNodeByURI("/");
const node: NodeByUri = data.nodeByUri;
---

<Layout title={node.seo?.title || node.title} metaDesc={node.seo?.metaDesc}>

  <RecentPosts
    orientation='row'
    quantity={6}
    filteredBy='recent'
    featuredPost={true}
    showViewAll={true}
  />

</Layout>
